<div class="d-flex flex-column align-items-center mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        Confirmation Page
      </div>
      <div class="card-body">
        <%= form_with(model: @post, local: true ,url: choose_new_or_edit)  do |f| %>
        <div class="form-group row mt-2">
          <div class="col-auto pr-0">
            <%= image_tag avatar_url(current_user) %>
          </div>
          <div class="col pl-0">

            <h5><%= f.hidden_field :content , class: "field"%></h5>
            <p><%= @post.content %></p>
            <%= f.hidden_field :user_id %>
            <%= f.hidden_field :id %>
          </div>
        </div>

        <%= image_tag(@post.image.url) if @post.image && @post.image.url%>
        <%= f.hidden_field :image %>
        <%= f.hidden_field :image_cache%>

      </div>
    </div>

    <%= f.submit "Post", class: "btn btn-primary" %>
    <%= f.submit "back", name:'back' , class: "btn" %>
    <% end %>
  </div>

</div>
